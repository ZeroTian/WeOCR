<import src="/templates/header/header.wxml"/>

<template is="second" data="{{content}}"/>

<!-- 切换栏 -->
<view class="swiper-tab">
  <block wx:for="{{swipertab}}" wx:key="sptab">
    <view class="swiper-tab-list {{currtab == item.index ? 'on' : ''}}" data-current="{{item.index}}" bindtap="tabSwitch">{{item.name}}</view>
  </block>
</view>
 
<swiper current="{{currtab}}" class="swiper-box" duration="300" style="height:{{deviceH-31}}px" bindchange="tabChange">
  <!-- 完成 -->
  <swiper-item>
    <scroll-view class="hot-box" scroll-y="true">
      <view  class="orderDetails" wx:for="{{alreadyOrder}}" wx:key="*this">
        <view class="orderListTitle">
          <text class="userName">{{item.name}}</text>
          <text class="orderStatus">{{item.state}}</text>
        </view>
        <view class="orderListDetails">
          <view class="productInfo">
            <view class="productTitle">开始时间: {{item.time}}</view>
            <text class="productPrice">当前内存占用：{{item.status}}</text>
          </view>
        </view>
        <view class="productCount">
          <view>
            <text>预计占用内存:{{item.money}}</text>
          </view>
        </view>
      </view>
    </scroll-view>
  </swiper-item>
  <!-- 未下载 -->
  <swiper-item>
    <scroll-view class="hot-box" scroll-y="true">
      <view class="orderDetails" wx:for="{{waitPayOrder}}" wx:key="*this">
        <view class="orderListTitle">
           <text class="userName">{{item.name}}</text>
          <text class="orderStatus">{{item.state}}</text>
        </view>
        <view class="orderListDetails">
          <view class="productInfo">
            <view class="productTitle">开始时间: {{item.time}}</view>
            <text class="productPrice">当前内存占用：{{item.status}}</text>
          </view>
        </view>
        <view class="productCount">
          <view>
             <text>预计占用内存:{{item.money}}</text>
          </view>
        </view>
      </view>
    </scroll-view>
  </swiper-item>
  <!-- 取消 -->
  <swiper-item>
    <scroll-view class="hot-box" scroll-y="true">
      <view class="orderDetails" wx:for="{{lostOrder}}" wx:key="*this">
        <view class="orderListTitle">
         <text class="userName">{{item.name}}</text>
          <text class="orderStatus">{{item.state}}</text>
        </view>
        <view class="orderListDetails">
          <view class="productInfo">
            <view class="productTitle">开始时间: {{item.time}}</view>
            <text class="productPrice">当前内存占用：{{item.status}}</text>
          </view>
        </view>
        <view class="productCount">
          <view>
             <text>预计占用内存:{{item.money}}</text>
          </view>
        </view>
      </view>
    </scroll-view>
  </swiper-item>
 
</swiper>