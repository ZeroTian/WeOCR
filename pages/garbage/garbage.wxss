image {
    vertical-align: top;
}

#wrapper {
    display: block;
    width: 100%;
    height: 100vh;
    background-color: #ffffff;
}

#searchWrapper {
    position: fixed;
    width: 100%;
    height: 120rpx;
    background-color: #ffffff;
    box-shadow: 0px 0px 5px 2px rgba(0,0,0,0.08);
    z-index: 999;
}

#search {
    position: absolute;
    left: 25rpx;
    top: 20rpx;
    padding: 0px 72rpx 0px 76rpx;
    width: 620rpx;
    height: 80rpx;
    border-radius: 40rpx;
    background-color: #f5f5f5;
    box-sizing: border-box;
    font-size: 32rpx;
    line-height: 1em;
    transition: all 200ms;
}

#cancelSearch {
    position: absolute;
    left: 697.5rpx;
    top: 60rpx;
    width: 2em;
    color: #333333;
    font-size: 32rpx;
    transform: translate(-50%,-50%);
}

#fakeSearch {
    position: absolute;
    left: 25rpx;
    top: 20rpx;
    padding: 0px 72rpx 0px 76rpx;
    width: 700rpx;
    height: 80rpx;
    border-radius: 40rpx;
    background-color: #f5f5f5;
    box-sizing: border-box;
}

#camera{
    position: absolute;
    top: 35rpx;
    left: 145rpx;
    width: 175rpx;
    height: 155rpx;
}

#magnifier {
    position: absolute;
    left: 50rpx;
    top: 44rpx;
    width: 32rpx;
    height: 32rpx;
}

#fakeSearch text {
    color: #808080;
    font-size: 32rpx;
    line-height: 80rpx;
}

#side {
    position: fixed;
    left: 0px;
    top: 120rpx;
    bottom: 0rpx;
    width: 150rpx;
    background-color: #f7f7f7;
}

.cat {
    position: relative;
    width: 100%;
    margin-bottom: 1px;
    height: 100rpx;
    text-align: center;
    box-sizing: border-box;
    line-height: 100rpx;
}

.cat::before {
    content: "";
    position: absolute;
    left: 0rpx;
    top: 0rpx;
    width: 7rpx;
    height: 100%;
    transition: all 150ms;
}

#cat0::before {
    background-color: #956c58;
}

#cat1::before {
    background-color: #2d2926;
}

#cat2::before {
    background-color: #003c71;
}

#cat3::before {
    background-color: #f9423a;
}

.cat.active::before {
    width: 100%;
}

.cat text {
    position: relative;
    color: #999999;
    font-size: 30rpx;
    transition: all 150ms;
}

.cat.active text {
    color: #ffffff;
    font-weight: bold;
}

.cat image {
    width: 20px;
    height: 20px;
    border-radius: 5px;
}

#qrCode {
    position: absolute;
    left: 35rpx;
    bottom: 84rpx;
    padding: 10rpx;
    width: 60rpx;
    height: 60rpx;
    background-color: #ffffff;
    box-shadow: 0px 1px 3px 1px rgba(0,0,0,0.1);
}

#tipsBtn {
    position: absolute;
    left: 0px;
    bottom: 30rpx;
    width: 100%;
    color: #cccccc;
    font-size: 24rpx;
    line-height: 1em;
    text-align: center;
}

#tipsOverlay {
    position: fixed;
    left: 0px;
    top: 0px;
    right: 0px;
    bottom: 0px;
    background-color: rgba(0,0,0,0);
    z-index: 1000;
}

#tips {
    position: absolute;
    left: 20rpx;
    bottom: 90rpx;
    padding: 0.6em 1.2em;
    width: 15em;
    border-radius: 5px;
    background-color: #000000;
    color: #ffffff;
    font-size: 24rpx;
    line-height: 2em;
    animation: fadeIn 300ms both;
    z-index: 1001;
}

#tips::before {
    content: "";
    position: absolute;
    left: 60rpx;
    bottom: -24rpx;
    width: 24rpx;
    height: 24rpx;
    background-color: #000000;
    transform: translate(-50%,-50%) rotate(45deg);
}

.list-wrapper {
    position: absolute;
    left: 150rpx;
    top: 120rpx;
    right: 0rpx;
    bottom: 300rpx;
}

.list {
    display: block;
    height: 100%;
    background-color: #ffffff;
}

.section {
    padding-top: 12px;
}

.cat-intro-wrapper {
    margin: 0rpx 12px;
    padding-top: 15px;
    padding-bottom: 8px;
    border-radius: 20rpx;
}

.result {
    padding-left: 1em;
    font-size: 15px;
    line-height: 3em;
}

.result:nth-child(odd) {
    background-color: #fafafa;
}

.result-cat-0 {
    color: #956c58;
}

.result-cat-1 {
    color: #2d2926;
}

.result-cat-2 {
    color: #003c71;
}

.result-cat-3 {
    color: #f9423a;
}

.cat-intro-wrapper-0 {
    background-color: rgba(102,64,53,0.1);
}

.cat-intro-wrapper-1 {
    background-color: rgba(44,43,39,0.1);
}

.cat-intro-wrapper-2 {
    background-color: rgba(16,72,131,0.1);
}

.cat-intro-wrapper-3 {
    background-color: rgba(229,49,34,0.1);
}

.section-icon {
    display: block;
    /* vertical-align: top; */
    margin: 0px auto;
    width: 149rpx;
    height: 149rpx;
    border-radius: 5px;
}

.cat-intro {
    margin-top: 8px;
    padding: 0px 15px;
}

.cat-description {
    font-size: 14px;
    line-height: 1.8em;
    text-indent: 2em;
}

.cat-description .b {
    font-weight: bold;
}

.throw-tips-title {
    display: block;
    font-size: 14px;
    font-weight: bold;
    line-height: 1.8em;
}

.throw-tip {
    position: relative;
    display: block;
    padding-left: 1em;
    font-size: 14px;
    line-height: 1.8em;
}

.throw-tip::before {
    content: "";
    position: absolute;
    left: 4px;
    top: 1em;
    width: 4px;
    height: 4px;
    border-radius: 2px;
    background-color: #000000;
    transform: translateY(-50%);
}

.item {
    padding-left: 1em;
    line-height: 3em;
    font-size: 15px;
}

.item:nth-child(odd) {
    background-color: #fafafa;
}

.item-hover {
    background-color: #fafafa;
}

#detailOverlay {
    position: fixed;
    left: 0px;
    top: 0px;
    right: 0px;
    bottom: 0px;
    background-color: rgba(0,0,0,0.3);
    z-index: 1800;
}

#detail {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 400rpx;
    height: 400rpx;
    border-radius: 10px;
    transform: translate(-50%,-50%);
    text-align: center;
    animation: pop 200ms;
}

.detail-0 {
    background-color: #664035;
}

.detail-1 {
    background-color: #2c2b27;
}

.detail-2 {
    background-color: #104883;
}

.detail-3 {
    background-color: #e53122;
}

#detailItemName {
    display: block;
    margin-top: 55rpx;
    color: #ffffff;
    font-size: 45rpx;
    font-weight: bold;
    line-height: 1em;
}

#detailBelongToText {
    margin-top: 35rpx;
    display: block;
    color: #ffffff;
    font-size: 35rpx;
    line-height: 1em;
}

#detailCatIcon {
    margin-top: 20rpx;
    width: 200rpx;
    height: 200rpx;
    border-radius: 5px;
    vertical-align: top;
}

#qrDownloadOverlay,#gzhQrOverlay {
    position: fixed;
    left: 0px;
    top: 0px;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 2002;
}

#qrDownloadWrapper,#gzhQrWrapper {
    position: fixed;
    left: 50%;
    top: 50%;
    width: 600rpx;
    height: 775rpx;
    border-radius: 10px;
    background-color: #ffffff;
    transform: translate(-50%,-50%);
    z-index: 2003;
    animation: pop 250ms;
}

#qrDownloadWrapper>image {
    display: block;
    margin-left: 75rpx;
    margin-top: 75rpx;
    width: 450rpx;
    height: 450rpx;
}

#gzhQrWrapper>image {
    display: block;
    margin-left: 50rpx;
    margin-top: 50rpx;
    width: 500rpx;
    height: 500rpx;
}

#qrDownloadWrapper button {
    margin-left: 75rpx;
    margin-top: 75rpx;
    width: 450rpx;
    height: 100rpx;
    border-radius: 50rpx;
    background-color: #64a814;
    color: #ffffff;
    font-size: 32rpx;
    line-height: 100rpx;
}

#qrDownloadWrapper button::after {
    border: none;
}

#hideQr {
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    width: 40rpx;
    height: 40rpx;
}

#hideQr::before,#hideQr::after {
    content: "";
    position: absolute;
    left: 50%;
    top: 50%;
    width: 40rpx;
    height: 4rpx;
    border-radius: 2rpx;
    background-color: #cccccc;
}

#hideQr::before {
    transform: translate(-50%,-50%) rotate(45deg);
}

#hideQr::after {
    transform: translate(-50%,-50%) rotate(-45deg);
}

#adWrapper {
    position: fixed;
    right: 0rpx;
    bottom: 0rpx;
    width: 600rpx;
    height: 250rpx;
    background-color: transparent;
    z-index: 200;
}

@-webkit-keyframes pop {
    0% {
        transform: translate(-50%,-50%) scale(0);
    }

    80% {
        transform: translate(-50%,-50%) scale(1.05);
    }

    100% {
        transform: translate(-50%,-50%) scale(1);
    }
}

@keyframes pop {
    0% {
        transform: translate(-50%,-50%) scale(0);
    }

    80% {
        transform: translate(-50%,-50%) scale(1.05);
    }

    100% {
        transform: translate(-50%,-50%) scale(1);
    }
}

@-webkit-keyframes fadeIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes fadeIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@-webkit-keyframes shake {
    4%,8%,12% {
        transform: rotate(-10deg);
    }

    2%,6%,10% {
        transform: rotate(10deg);
    }

    0%,14%,100% {
        transform: rotate(0deg);
    }
}

@keyframes shake {
    4%,8%,12% {
        transform: rotate(-10deg);
    }

    2%,6%,10% {
        transform: rotate(10deg);
    }

    0%,14%,100% {
        transform: rotate(0deg);
    }
}