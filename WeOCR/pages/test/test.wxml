<view class='body'>

  <cropper id='cropper' class='stage'></cropper>
  
  <view class='determine_bar' wx:if="{{clip_box}}">
    <view class='btn btn-cancel ripple' bindtap='fnCancel'>取消</view>
    <view class='btn btn-submit ripple' bindtap='fnSubmit'>确定</view>
  </view>

  <view class="tool_bar" wx:if="{{!clip_box}}" style="width: 100rpx; height: 100rpx;"  bindtap="onShearTap">
    <view class="icon">
      <image src="../../images/shear_w.png" style="width: 65rpx; height: 65rpx;"/>
    </view>
  </view>

</view>